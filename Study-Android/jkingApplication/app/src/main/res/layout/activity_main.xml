<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.example.jking.jkingapplication.MainActivity"
    android:elevation="1dp">


    <Button
        android:text="Open the news"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="35dp"
        android:background="#2E3D49"
        android:id="@+id/button_news"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Open the movie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:id="@+id/button_movie"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Open the photo "
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:id="@+id/button_photo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
